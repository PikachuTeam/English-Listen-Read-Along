<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/home_screen_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_item_categories_height"
            app:cardCornerRadius="@dimen/cardview_corner_radius"
            android:elevation="@dimen/cardview_default_elevation">
            <ImageView
                android:id="@+id/imgCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/america_mosaic"
                android:scaleType="centerCrop">
            </ImageView>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tvNameCategory"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_name_category_height"
            android:layout_alignBottom="@+id/card_view"
            android:layout_alignParentRight="true"
            android:text="Sport"
            android:layout_marginRight="@dimen/margin_rowitem_category"
            android:textColor="@color/text_category_color"
            android:textSize="@dimen/common_text_size_25"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>