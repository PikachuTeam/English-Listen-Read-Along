<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgCategory"

            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_80"
            android:background="@drawable/america_mosaic"
            android:scaleType="centerCrop"></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNameCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_size_21"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/common_size_4"
                android:paddingTop="@dimen/common_size_4"
                android:singleLine="true"
                android:text="Sport"
                android:scaleX="1.2"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_16" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>