<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_55"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_size_5"
    android:paddingRight="@dimen/common_size_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_55"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_playing"
                android:layout_width="@dimen/common_size_35"
                android:layout_height="@dimen/common_size_35"
                android:background="@drawable/play" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_19"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/common_size_25"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Trai tim ben le"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_18" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>