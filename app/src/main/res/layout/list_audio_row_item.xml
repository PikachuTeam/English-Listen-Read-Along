<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/row_item_audio_height"
        android:layout_marginLeft="@dimen/margin_text_name_sub"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameAudio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/name_audio_height"
            android:text="All about Shark"
            android:textSize="@dimen/common_text_size_20"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/name_audio_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMinDuration"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/name_audio_height"
                android:text="12"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/name_audio_height"
                android:text=":"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvSecDuration"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/name_audio_height"
                android:text="20"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgPlaying"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_item_audio_height"
        android:layout_weight="1.5"
        android:background="@drawable/play" />

    <ImageButton
        android:id="@+id/imgDownload"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_item_audio_height"
        android:layout_weight="1.5"
        android:background="@drawable/download"
        android:visibility="visible" />
</LinearLayout>
