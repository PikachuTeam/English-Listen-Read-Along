<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_size_5"
        android:layout_marginRight="@dimen/common_size_60"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_categories_notify"
            android:layout_width="@dimen/common_size_50"
            android:layout_height="@dimen/common_size_50"
            android:layout_marginLeft="@dimen/common_size_10"
            android:background="@drawable/icon_even" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_size_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_notifi_audio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_size_10"
                android:singleLine="true"
                android:text="Trai tim ben le"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_17"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_size_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/btn_play"
                    android:layout_width="@dimen/common_size_40"
                    android:layout_height="@dimen/common_size_40"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon_btn_play"
                        android:layout_width="@dimen/common_size_32"
                        android:layout_height="@dimen/common_size_32"
                        android:layout_gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_stop"
                    android:layout_width="@dimen/common_size_40"
                    android:layout_height="@dimen/common_size_40"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/common_size_34"
                        android:layout_height="@dimen/common_size_34"
                        android:layout_centerVertical="true"
                        android:background="@drawable/stop" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>