<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/small_player"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.essential.englishlistenreadalong.app.CustomSeekBar
            android:id="@+id/seekBar_Custom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_50"
            android:background="@color/colorPrimary">


        </com.essential.englishlistenreadalong.app.CustomSeekBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_50"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/view_player_small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_icon_categories"
                                    android:layout_width="@dimen/common_size_42"
                                    android:layout_height="@dimen/common_size_42"
                                    android:layout_marginLeft="@dimen/common_size_10"
                                    android:background="@drawable/icon_music" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/common_size_1">

                                    <TextView
                                        android:id="@+id/tv_Title_in_playlist_small"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/common_size_10"
                                        android:ellipsize="marquee"
                                        android:focusableInTouchMode="true"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:scrollHorizontally="true"
                                        android:singleLine="true"
                                        android:text="Trai tim ben le"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/common_text_size_15"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_Categories_in_playlist_small"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/common_size_13"

                                        android:singleLine="true"
                                        android:text="Bang Kieu"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/common_text_size_12" />
                                </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:padding="@dimen/common_size_5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/common_size_10"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"></LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btn_previous_small_player"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="30"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_icon_previous_small_player"

                                        android:layout_width="@dimen/common_size_25"
                                        android:layout_height="@dimen/common_size_25"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/previous_button" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btn_play_small_player"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="36"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_icon_play_small_player"
                                        android:layout_width="@dimen/common_size_40"
                                        android:layout_height="@dimen/common_size_40"
                                        android:background="@drawable/play_circle" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btn_next_small_player"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="30"
                                    android:gravity="left"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_icon_next_small_player"
                                        android:layout_width="@dimen/common_size_25"

                                        android:layout_height="@dimen/common_size_25"
                                        android:layout_gravity="center"
                                        android:src="@drawable/next_button" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>