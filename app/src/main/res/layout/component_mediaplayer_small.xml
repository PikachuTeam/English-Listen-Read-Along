<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/small_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.essential.englishlistenreadalong.musicplayer.CustomSeekBar
            android:id="@+id/seekBar_Custom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_55"
            android:background="@color/colorPrimary">


        </com.essential.englishlistenreadalong.musicplayer.CustomSeekBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_55"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/view_player_small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_icon_categories"
                                    android:layout_width="@dimen/common_size_45"
                                    android:layout_height="@dimen/common_size_45"
                                    android:layout_marginLeft="@dimen/common_size_8"
                                    android:background="@drawable/icon_music" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_Title_in_playlist_small"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/common_size_2"
                                        android:layout_marginLeft="@dimen/common_size_10"
                                        android:ellipsize="marquee"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:singleLine="true"
                                        android:text="Trai tim ben le"
                                        android:textColor="@color/white"
                                        android:textScaleX="1.2"
                                        android:textSize="@dimen/common_text_size_16"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_Categories_in_playlist_small"
                                        android:layout_width="match_parent"

                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/common_size_12"
                                        android:singleLine="true"

                                        android:text="Bang Kieu"
                                        android:textColor="@color/white"
                                        android:textScaleX="1.3"
                                        android:textSize="@dimen/common_text_size_13" />
                                </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:paddingBottom="@dimen/common_size_5"
                    android:paddingTop="@dimen/common_size_5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="100">


                                <LinearLayout
                                    android:id="@+id/btn_previous_small_player"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="30"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_icon_previous_small_player"

                                        android:layout_width="@dimen/common_size_27"
                                        android:layout_height="@dimen/common_size_30"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/backward" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btn_play_small_player"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="40"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_icon_play_small_player"
                                        android:layout_width="@dimen/common_size_40"
                                        android:layout_height="@dimen/common_size_40"
                                        android:background="@drawable/play_circle" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btn_next_small_player"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="30"
                                    android:gravity="left"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_icon_next_small_player"
                                        android:layout_width="@dimen/common_size_27"

                                        android:layout_height="@dimen/common_size_27"
                                        android:layout_gravity="center"
                                        android:src="@drawable/forward" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>