<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_item_subcategory_height"
        android:weightSum="7">
        <TextView
            android:id="@+id/tvNameSubCategory"
            android:layout_width="0dp"
            android:layout_height="@dimen/row_item_subcategory_height"
            android:layout_weight="6"
            android:textSize="@dimen/common_text_size_30"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_text_name_sub"
            android:text="1905-1915"/>
        <TextView
            android:id="@+id/tvTotalAudio"
            android:layout_width="0dp"
            android:layout_height="@dimen/row_item_subcategory_height"
            android:layout_weight="1"
            android:textSize="@dimen/common_text_size_30"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>