<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/tvHeaderDownload"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_name_category_height"
            android:gravity="center_vertical"
            android:text="A"
            android:layout_marginLeft="@dimen/common_size_10"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_20"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_item_audio_height"
        android:elevation="@dimen/cardview_default_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="@dimen/common_size_2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
                <ImageView
                    android:id="@+id/imgIconCategoryDL"
                    android:layout_width="@dimen/common_size_50"
                    android:layout_height="@dimen/common_size_50"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_america_history"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNameAudioDownload"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_size_25"
                    android:textSize="@dimen/common_text_size_18"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="test"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_size_30"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDownloadSub"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/common_size_25"
                        android:layout_weight="4.5"
                        android:textSize="@dimen/common_text_size_10"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgPlayingDownload"
                    android:layout_width="@dimen/common_size_30"
                    android:layout_height="@dimen/common_size_30"
                    android:background="@drawable/heart1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgDeleteDownload"
                    android:layout_width="@dimen/common_size_30"
                    android:layout_height="@dimen/common_size_30"
                    android:background="@drawable/ic_delete_black" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
